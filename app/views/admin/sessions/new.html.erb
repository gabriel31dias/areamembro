<div class="auth-container">
  <div class="auth-header">
    <h1>🎓 Admin Panel</h1>
    <p>Faça login para continuar</p>
  </div>

  <% if flash[:alert] %>
    <div class="alert alert-danger"><%= flash[:alert] %></div>
  <% end %>

  <%= form_with url: admin_login_path, method: :post, local: true do |f| %>
    <div class="form-group">
      <%= f.label :email, "Email", class: "form-label" %>
      <%= f.email_field :email, class: "form-input", placeholder: "admin@example.com", required: true, autofocus: true %>
    </div>

    <div class="form-group">
      <%= f.label :password, "Senha", class: "form-label" %>
      <%= f.password_field :password, class: "form-input", placeholder: "••••••••", required: true %>
    </div>

    <%= f.submit "Entrar", class: "btn-submit" %>
  <% end %>
</div>
