        <% end %>

        <%= link_to panel_courses_path, class: "nav-item #{current_page?(panel_courses_path) || current_page?(new_panel_course_path) || (controller_name == 'courses' && action_name != 'index') ? 'active' : ''}" do %>
          <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
          </svg>
          Cursos
        <% end %>

        <%= link_to panel_members_path, class: "nav-item #{controller_name == 'members' ? 'active' : ''}" do %>
          <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"/>
          </svg>
          Membros
        <% end %>

        <%= link_to panel_plans_path, class: "nav-item #{controller_name == 'plans' ? 'active' : ''}" do %>
          <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          Planos
        <% end %>

        <%= link_to panel_ebooks_path, class: "nav-item #{controller_name == 'ebooks' ? 'active' : ''}" do %>
          <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
          </svg>
          Ebooks
        <% end %>

        <div style="border-top: 1px solid rgba(255,255,255,0.1); margin: 1.5rem 1.5rem 1rem;"></div>

        <%= link_to panel_settings_path, class: "nav-item #{controller_name == 'settings' ? 'active' : ''}" do %>
          <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
          </svg>
          Configurações
        <% end %>

        <div style="border-top: 1px solid rgba(255,255,255,0.1); margin: 1.5rem 1.5rem 1rem;"></div>

        <%= link_to panel_logout_path, method: :delete, data: { turbo_method: :delete }, class: "nav-item" do %>
          <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/>
          </svg>
          Sair
        <% end %>
      </nav>
    </aside>

    <!-- Main Wrapper -->
    <div class="main-wrapper">
      <!-- Top Bar -->
      <div class="top-bar">
        <h1 class="page-title">
          <% if current_page?(panel_dashboard_path) || current_page?(panel_root_path) %>
            Dashboard
          <% elsif current_page?(panel_courses_path) %>
            Cursos
          <% elsif current_page?(new_panel_course_path) %>
            Novo Curso
          <% elsif current_page?(panel_members_path) %>
            Membros
          <% elsif current_page?(new_panel_member_path) %>
            Novo Membro
          <% elsif controller_name == 'courses' && action_name == 'edit' %>
            Editar Curso
          <% elsif controller_name == 'courses' && action_name == 'show' %>
            Detalhes do Curso
          <% elsif controller_name == 'members' && action_name == 'edit' %>
            Editar Membro
          <% elsif controller_name == 'members' && action_name == 'show' %>
            Detalhes do Membro
          <% else %>
            Sistema
          <% end %>
        </h1>
      </div>

      <!-- Main Content -->
      <main class="main-content">
        <%= yield %>
      </main>
    </div>

    <!-- Mobile Menu Button -->
    <button class="mobile-menu-btn" onclick="toggleSidebar()">
      <svg width="24" height="24" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
      </svg>
    </button>

    <script>
      function toggleSidebar() {
        document.getElementById('sidebar').classList.toggle('active');
      }

      // Close sidebar when clicking outside on mobile
      document.addEventListener('click', function(event) {
        const sidebar = document.getElementById('sidebar');
        const menuBtn = document.querySelector('.mobile-menu-btn');
        
        if (window.innerWidth <= 768 && 
            !sidebar.contains(event.target) && 
            !menuBtn.contains(event.target) &&
            sidebar.classList.contains('active')) {
          sidebar.classList.remove('active');
        }
      });

      // SweetAlert for flash messages
      <% if notice %>
        Swal.fire({
          icon: 'success',
          title: 'Sucesso!',
          text: '<%= notice %>',
          confirmButtonColor: '#00d4ff',
          timer: 3000,
          timerProgressBar: true
        });
      <% end %>

      <% if alert %>
        Swal.fire({
          icon: 'error',
          title: 'Erro!',
          text: '<%= alert %>',
          confirmButtonColor: '#ef4444'
        });
      <% end %>
    </script>
  </body>
</html>
